<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.TestProjectSendy" parent="Theme.AppCompat.Light" >
        <item name="background">@color/crimson</item>
<!--        <item name="android:splashScreenTheme"></item>-->
 </style>

<style name="MySplashScreenStyle" parent="Theme.SplashScreen">
    <!-- Set the splash screen background, animated icon, and animation
    duration. -->
    <item name="windowSplashScreenBackground">@color/crimson</item>

    <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
         drawable. One of these is required. -->
    <item name="windowSplashScreenAnimatedIcon">@drawable/splash_animated_vector</item>


    <!-- Required for animated icons. -->
    <item name="windowSplashScreenAnimationDuration">3000</item>

    <!-- Set the theme of the Activity that directly follows your splash
    screen. This is required. -->
    <item name="postSplashScreenTheme">@style/Theme.TestProjectSendy</item>
</style>

</resources>